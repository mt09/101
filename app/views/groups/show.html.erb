<div class="row">
	<div class="col-md-12">
		<h2><%= @group.title %></h2>
		<p><%= @group.description %></p>

		<div>
			<% if !current_user.is_member_of?(@group) %>
				<%= link_to "Join", join_group_path(@group), method: :post, class: "btn btn-info"  %>
			<% else %>
				<%= link_to "Quit", quit_group_path(@group), method: :post,class: "btn btn-danger"  %>
			<% end %>
		</div>

		<div class="pull-right" style="padding-bottom:10px;">
			<% if @group.editable_by?(current_user) %>
				<%= link_to "Edit Group", edit_group_path(@group), class: "btn btn-warning" %>
			<% end %>
			<%= link_to "New Post", new_group_post_path(@group, @post), class: "btn btn-info" %>
		</div>

		<table class="table table-bordered table-hover">
			<thead>
				<tr>
					<th width="25%">Content</th>
					<th width="50%">Last Update</th>
					<th width="25%">Options</th>
				</tr>
			</thead>
			<tbody>
				<% @posts.each do |post| %>
					<tr>
						<td><%= post.content %></td>
						<td><%= post.updated_at.to_s(:long) %></td>
						<td>
							<% if post.editable_by?(current_user) %>
								<%= link_to "edit", edit_group_post_path(post.group, post) %>
								<%= link_to "remove", group_post_path(post.group, post), method: :delete, data: {confirm: "Sure?"} %>
							<% end %>
						</td>
					</tr>
				<% end %> 
			</tbody>
		</table>
	</div>
</div>
