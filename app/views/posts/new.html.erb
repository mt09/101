<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<h2>New Post</h2>
		<%= simple_form_for [@post.group, @post] do |f| %>
			<div>
				<%= f.input :content %>
			</div>
			<div>
				<%= f.button :submit, data: {disable_with: "Submitting..."}, class: "btn btn-default" %>
			</div>
		<% end %>
	</div>
</div>